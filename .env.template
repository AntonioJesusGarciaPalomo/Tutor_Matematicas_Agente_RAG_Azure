# ================================================
# TEMPLATE DE CONFIGURACIÓN - MATH TUTOR AI
# ================================================
# Copia este archivo a .env y completa los valores
# cp .env.template .env

# ================================================
# AZURE AI FOUNDRY
# ================================================
# Endpoint del proyecto AI (formato: https://PROJECT_NAME.api.azureml.ms)
PROJECT_ENDPOINT=

# Nombre del modelo desplegado (ej: gpt-4o, gpt-4-turbo)
MODEL_DEPLOYMENT_NAME=gpt-4o

# ================================================
# AZURE STORAGE
# ================================================
# Nombre de la cuenta de almacenamiento (sin .blob.core.windows.net)
STORAGE_ACCOUNT_NAME=

# Nombre del contenedor para imágenes generadas
IMAGES_CONTAINER_NAME=images

# ================================================
# URLS DE SERVICIOS (para producción)
# ================================================
# URL del backend (Container App)
BACKEND_URI=

# URL del frontend (App Service)
FRONTEND_URI=

# ================================================
# AZURE CONTAINER REGISTRY
# ================================================
# Endpoint del registry (formato: REGISTRY_NAME.azurecr.io)
AZURE_CONTAINER_REGISTRY_ENDPOINT=

# ================================================
# CONFIGURACIÓN ADICIONAL (opcional)
# ================================================
# Resource Group donde están los recursos
RESOURCE_GROUP=rg-aifoundry-tutor

# Región de Azure donde se despliegan los recursos
# Valores comunes: eastus, westeurope, swedencentral, northeurope
AZURE_LOCATION=

# Configuración de desarrollo local
# Para desarrollo local, estas se sobrescriben automáticamente
# BACKEND_URI=http://localhost:8000
# FRONTEND_URI=http://localhost:7860

# ================================================
# CREDENCIALES (NO COMMITEAR)
# ================================================
# Solo necesarias si no usas DefaultAzureCredential
# AZURE_CLIENT_ID=
# AZURE_CLIENT_SECRET=
# AZURE_TENANT_ID=